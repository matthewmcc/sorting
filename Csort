#include <iostream>
#include <vector>

// Csort sort class implementing sorting
class Csort: public Sorting {
public:
	Csort(std::vector<int>, int);
	void sort();
	void Csort();
};

Csort::Csort(std::vector<int> l, int s) {
	list = l;
	listsize = s;
}

// Sort funciton
void Csort::sort() {
	starttimer();
	std::cout << "Csort sort, average case: O(n*n)" << std::endl;

	std::sort(list);

	stoptimer("Csort sort");

	// Checks if sort was successful
	if (!sorted())
		std::cout << "Csort sort failed" << std::endl;
}
